<!-- Validation failure messages -->
<% if @net_worth.errors.any? %>
  <% @net_worth.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Net Worth #<%= @net_worth.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_net_worth/<%= @net_worth.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for asset_value_total_id -->
      <div class="form-group">
        <label for="asset_value_total_id" class="control-label">
          Asset value total
        </label>

        <%= select_tag(:asset_value_total_id, options_from_collection_for_select(Asset.all, :id, :created_at, @net_worth.asset_value_total_id), :class => "form-control") %>
      </div>

      <!-- Label and input for liabilities_value_total_id -->
      <div class="form-group">
        <label for="liabilities_value_total_id" class="control-label">
          Liabilities value total
        </label>

        <%= select_tag(:liabilities_value_total_id, options_from_collection_for_select(Liability.all, :id, :created_at, @net_worth.liabilities_value_total_id), :class => "form-control") %>
      </div>

      <!-- Label and input for net_worth_total_id -->
      <div class="form-group">
        <label for="net_worth_total_id" class="control-label">
          Net worth total
        </label>

        <input type="text" id="net_worth_total_id" name="net_worth_total_id" placeholder="Net worth total" class="form-control" value="<%= @net_worth.net_worth_total_id %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :age, @net_worth.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @net_worth.date %>">
      </div>

      <button class="btn btn-warning">
        Update Net Worth
      </button>
      or
      <a href="/net_worths/<%= @net_worth.id %>">Cancel</a>
    </form>
  </div>
</div>
