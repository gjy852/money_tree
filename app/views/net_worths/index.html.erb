<div class="page-header">
  <h1>
    Net worths
    <a href="/net_worths/new" class="btn btn-lg btn-success">New Net worth</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Asset total</th>
        <th>Liabilities total</th>
        <th>Calculated net worth</th>
        <th>User</th>
        <th>Net worth date</th>
        <th>Actions</th>
      </tr>

      <% @net_worths.each do |net_worth| %>
      <tr>
        <td>
          <% if net_worth.asset_total.present? %>
            <a href="/assets/<%= net_worth.asset_total.id %>">
              <%= net_worth.asset_total.stocks_and_stock_funds %>
            </a>
          <% end %>
        </td>
        <td>
          <% if net_worth.liabilities_total.present? %>
            <a href="/liabilities/<%= net_worth.liabilities_total.id %>">
              <%= net_worth.liabilities_total.mortgage %>
            </a>
          <% end %>
        </td>
        <td><%= net_worth.calculated_net_worth %></td>
        <td>
          <% if net_worth.user.present? %>
            <a href="/users/<%= net_worth.user.id %>">
              <%= net_worth.user.age %>
            </a>
          <% end %>
        </td>
        <td><%= net_worth.net_worth_date %></td>
        <td>
          <a href="/net_worths/<%= net_worth.id %>" class="btn btn-primary">Show</a>
          <a href="/net_worths/<%= net_worth.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_net_worth/<%= net_worth.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @net_worths, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
