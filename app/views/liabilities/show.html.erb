<div class="page-header">
  <h3>Liability #<%= @liability.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Mortgage</dt>
      <dd><%= @liability.mortgage %></dd>

      <dt>Student loan</dt>
      <dd><%= @liability.student_loan %></dd>

      <dt>Credit cards</dt>
      <dd><%= @liability.credit_cards %></dd>

      <dt>Liabilities total</dt>
      <dd><%= @liability.liabilities_total %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/liabilities" class="btn btn-primary">
        Back
      </a>
      <a href="/liabilities/<%= @liability.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_liability/<%= @liability.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
